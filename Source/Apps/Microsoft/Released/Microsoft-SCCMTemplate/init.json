        "onValidate": [
          {
            "name": "Microsoft-ValidateAdminPrivileges"
          },
          {
            "name": "Microsoft-ValidateSecurityOptions"
          },
          {
            "name": "Microsoft-ValidatePowerShellVersion"
          }
        ]
      },

      // SCCM
      {
        "credentialTarget": "pbi_sccm",
