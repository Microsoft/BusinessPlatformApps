        "sku": "Standard",
        "skip": "$run(this.MS.DataStore.getAllValues('azureSqlDisabled')[1] === 'true' || this.MS.DataStore.getValue('ssasDisabled') === 'true' ? 'true': 'false')"
      },

      {
        "name": "Microsoft-WaitForArmDeploymentStatus",
